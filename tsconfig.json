{
  "compilerOptions": {
    "baseUrl": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": true,
    "outDir": "./build",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importHelpers": true // tslib
  },
  "include": ["src/**/*", "@types/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "swc": true
  }
}
